{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "lib": [
      "es2022",
      "dom"
    ],
    "noEmit": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@open-api/*": ["src/open-api/*"],
      "@test-utils/*": ["src/integration-tests/utils/*"]
    }
  },
  "exclude": [
    "dist",
    "src/open-api/spec"
  ]
}